<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAEBD7"
    tools:context=".MainActivity">

    <!-- Titlu joc -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2048"
        android:textSize="36sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score: 0"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <Button
        android:id="@+id/homeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home" />

    <!-- Gridul de joc -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:rowCount="4"
        android:columnCount="4"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 16 celule de joc -->
        <TextView
            android:id="@+id/cell_00"
            style="@style/GameCell" />
        <TextView
            android:id="@+id/cell_01"
            style="@style/GameCell" />
        <TextView
            android:id="@+id/cell_02"
            style="@style/GameCell" />
        <TextView
            android:id="@+id/cell_03"
            style="@style/GameCell" />
        <TextView
            android:id="@+id/cell_10"
            style="@style/GameCell" />
        <TextView
            android:id="@+id/cell_11"
            style="@style/GameCell" />
        <TextView
            android:id="@+id/cell_12"
            style="@style/GameCell" />
        <TextView
            android:id="@+id/cell_13"
            style="@style/GameCell" />
        <TextView
            android:id="@+id/cell_20"
            style="@style/GameCell" />
        <TextView
            android:id="@+id/cell_21"
            style="@style/GameCell" />
        <TextView
            android:id="@+id/cell_22"
            style="@style/GameCell" />
        <TextView
            android:id="@+id/cell_23"
            style="@style/GameCell" />
        <TextView
            android:id="@+id/cell_30"
            style="@style/GameCell" />
        <TextView
            android:id="@+id/cell_31"
            style="@style/GameCell" />
        <TextView
            android:id="@+id/cell_32"
            style="@style/GameCell" />
        <TextView
            android:id="@+id/cell_33"
            style="@style/GameCell" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
